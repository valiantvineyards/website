---
interface Props {
  title: string;
  subtitle?: string;
}

const { title, subtitle } = Astro.props;
---

<div class="container mx-auto px-4 py-16 lg:px-8 lg:py-24">
  <div class="mx-auto max-w-3xl text-center">
    <h1 class="text-4xl font-bold tracking-tight text-foreground sm:text-5xl lg:text-6xl">
      {title}
    </h1>
    {subtitle && (
      <p class="mt-4 text-lg text-muted-foreground">
        {subtitle}
      </p>
    )}
    <div class="mt-12 rounded-lg border border-dashed border-border bg-muted/50 p-12">
      <p class="text-muted-foreground">Coming Soon</p>
    </div>
  </div>
</div>
