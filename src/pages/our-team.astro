---
import BaseLayout from "../layouts/BaseLayout.astro";
import Button from "../components/Button.astro";
import { Image } from "astro:assets";
import HeroImage from "../components/HeroImage.astro";
import heroImage from "../assets/images/winemakers-lucas-leif-rum-cropped.webp";

// Team member images
import eldon from "../assets/images/team/eldon-sipping-wine.webp";
import sherry from "../assets/images/team/sherry.webp";
import leif from "../assets/images/team/leif.webp";
import lucas from "../assets/images/team/lucas.webp";
import adrienne from "../assets/images/team/adrienne.webp";
import wineryDogs from "../assets/images/team/winery-dogs.webp";

const leadership = [
  {
    name: "Eldon Nygaard",
    title: "Chief Executive Officer",
    image: eldon,
    bio: "Eldon holds a business degree from the University of Nebraska and a law degree from Marquette University. He is licensed to practice before the U.S. Supreme Court and various district courts. A former educator at Arizona State, Colorado University, and University of South Dakota, Eldon also served in the South Dakota House and Senate. He is a retired Army CW-4 helicopter pilot with a distinguished military career. Eldon has been farming in Turner County since 1984, and his vision for viticulture in South Dakota led to the founding of Valiant Vineyards—the state's oldest winery."
  },
  {
    name: "Sherry Nygaard",
    title: "Vice President, Secretary & General Manager",
    image: sherry,
    bio: "Sherry brings diverse experience from her time as a flight attendant with Hughes AirWest (1978-1985) and ticket agent with America West (1985-1997). She later served as an administrative assistant at Gateway Computers for six years. With an Associate degree in Criminal Justice and a Bachelor of Science in Liberal Studies from the University of South Dakota, Sherry has been instrumental in the winery's growth. She helped plant vineyard vines from 1993-2008 and served on the board for ten years."
  }
];

const productionTeam = [
  {
    name: "Leif Nygaard",
    title: "Head Vintner",
    image: leif,
    bio: "As a sixth-generation family winemaker, Leif has refined the wine-making process at Valiant Vineyards. His expertise has earned numerous national awards for our wines. He leads all aspects of wine production, from fermentation to aging and bottling operations."
  },
  {
    name: "Lucas Burke",
    title: "Assistant Vintner",
    image: lucas,
    bio: "Lucas plays a vital role in our production team, assisting with wine production and cellar maintenance. He supports bottling line operations and handles wine packaging duties, ensuring every bottle meets our quality standards."
  }
];

const tastingRoom = [
  {
    name: "Adrienne Lewis",
    title: "Tasting Room Manager",
    image: adrienne,
    bio: "A team member since 2001, Adrienne has extensive cross-training across all facility operations. She manages customer relations, wedding planning, and special events. Adrienne is your primary contact for reservations and will ensure your visit to Valiant Vineyards is memorable."
  }
];
---

<BaseLayout title="Our Team" description="Meet the passionate people behind Valiant Vineyards who bring dedication and expertise to every bottle.">
  <!-- Hero Section -->
  <section class="relative">
    <div class="relative min-h-[50vh] lg:min-h-[60vh] flex items-center justify-center py-24 bg-neutral-900">
      <HeroImage
        src={heroImage}
        alt="Leif and Lucas, our winemaking team, with Clay Turner spirits"
        position="top"
        quality={60}
      />
      <div class="container relative mx-auto px-4 lg:px-8 text-center">
        <div class="inline-block bg-black/50 px-8 py-6">
          <h1 class="font-serif text-4xl font-semibold tracking-tight text-white sm:text-5xl lg:text-6xl">
            Our Team
          </h1>
          <p class="mt-4 font-serif text-xl text-white font-medium max-w-2xl mx-auto lg:text-2xl">
            The passionate people behind South Dakota's oldest winery
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Introduction -->
  <section class="py-12 lg:py-16">
    <div class="container mx-auto px-4 lg:px-8">
      <div class="mx-auto max-w-3xl text-center">
        <p class="text-lg text-muted-foreground">
          From our founding family to our dedicated staff, every member of the Valiant Vineyards team shares a passion for crafting exceptional wines and spirits. Get to know the people who make it all happen.
        </p>
      </div>
    </div>
  </section>

  <!-- Leadership Section -->
  <section class="pb-16 lg:pb-24">
    <div class="container mx-auto px-4 lg:px-8">
      <div class="text-center mb-16">
        <p class="text-sm font-medium text-gold uppercase tracking-widest">Leadership</p>
        <div class="mt-3 mx-auto w-12 border-t border-gold/40"></div>
      </div>

      <div class="space-y-20 lg:space-y-32">
        <!-- Eldon -->
        <div class="max-w-5xl mx-auto">
          <div class="grid gap-8 md:gap-10 lg:gap-12 md:grid-cols-5 items-center">
            <!-- Image -->
            <div class="md:col-span-2 overflow-hidden shadow-lg">
              <Image
                src={leadership[0].image}
                alt={leadership[0].name}
                class="w-full h-auto object-cover"
                widths={[400, 600]}
                sizes="(max-width: 768px) 100vw, 400px"
                quality={85}
              />
            </div>

            <!-- Bio -->
            <div class="md:col-span-3">
              <p class="text-sm font-medium text-gold uppercase tracking-wide mb-2">
                {leadership[0].title}
              </p>
              <h3 class="font-serif text-2xl font-semibold sm:text-3xl mb-4">
                {leadership[0].name}
              </h3>
              <p class="text-muted-foreground">
                {leadership[0].bio}
              </p>
            </div>
          </div>
        </div>

        <!-- Sherry -->
        <div class="max-w-5xl mx-auto">
          <div class="grid gap-8 md:gap-10 lg:gap-12 md:grid-cols-5 items-center">
            <!-- Image -->
            <div class="md:col-span-2 md:order-last overflow-hidden shadow-lg">
              <Image
                src={sherry}
                alt="Sherry Nygaard in the tasting room"
                class="w-full h-auto object-cover"
                widths={[400, 600]}
                sizes="(max-width: 768px) 100vw, 400px"
                quality={85}
              />
            </div>

            <!-- Bio -->
            <div class="md:col-span-3">
              <p class="text-sm font-medium text-gold uppercase tracking-wide mb-2">
                {leadership[1].title}
              </p>
              <h3 class="font-serif text-2xl font-semibold sm:text-3xl mb-4">
                {leadership[1].name}
              </h3>
              <p class="text-muted-foreground">
                {leadership[1].bio}
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Production Team Section -->
  <section class="bg-neutral-50 py-16 lg:py-24">
    <div class="container mx-auto px-4 lg:px-8">
      <div class="text-center mb-16">
        <p class="text-sm font-medium text-gold uppercase tracking-widest">Production Team</p>
        <div class="mt-3 mx-auto w-12 border-t border-gold/40"></div>
      </div>

      <div class="space-y-20 lg:space-y-32 max-w-5xl mx-auto">
        {productionTeam.map((member, index) => (
          <div class="grid gap-8 md:gap-10 lg:gap-12 md:grid-cols-5 items-center">
            <!-- Image -->
            <div class:list={[
              "md:col-span-2 overflow-hidden shadow-lg",
              index % 2 === 1 ? "md:order-last" : ""
            ]}>
              <Image
                src={member.image}
                alt={member.name}
                class="w-full h-auto object-cover"
                widths={[400, 600]}
                sizes="(max-width: 768px) 100vw, 400px"
                quality={85}
              />
            </div>

            <!-- Bio -->
            <div class="md:col-span-3">
              <p class="text-sm font-medium text-gold uppercase tracking-wide mb-2">
                {member.title}
              </p>
              <h3 class="font-serif text-2xl font-semibold sm:text-3xl mb-4">
                {member.name}
              </h3>
              <p class="text-muted-foreground">
                {member.bio}
              </p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Tasting Room Section -->
  <section class="py-16 lg:py-24">
    <div class="container mx-auto px-4 lg:px-8">
      <div class="text-center mb-16">
        <p class="text-sm font-medium text-gold uppercase tracking-widest">Tasting Room</p>
        <div class="mt-3 mx-auto w-12 border-t border-gold/40"></div>
      </div>

      <div class="max-w-5xl mx-auto">
        {tastingRoom.map((member) => (
          <div class="grid gap-8 md:gap-10 lg:gap-12 md:grid-cols-5 items-center">
            <!-- Image -->
            <div class="md:col-span-2 overflow-hidden shadow-lg">
              <Image
                src={member.image}
                alt={member.name}
                class="w-full h-auto object-cover"
                widths={[400, 600]}
                sizes="(max-width: 768px) 100vw, 400px"
                quality={85}
              />
            </div>

            <!-- Bio -->
            <div class="md:col-span-3">
              <p class="text-sm font-medium text-gold uppercase tracking-wide mb-2">
                {member.title}
              </p>
              <h3 class="font-serif text-2xl font-semibold sm:text-3xl mb-4">
                {member.name}
              </h3>
              <p class="text-muted-foreground">
                {member.bio}
              </p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Winery Dogs Section -->
  <section class="bg-neutral-50 py-16 lg:py-24">
    <div class="container mx-auto px-4 lg:px-8">
      <div class="text-center mb-16">
        <p class="text-sm font-medium text-gold uppercase tracking-widest">Welcoming Committee</p>
        <div class="mt-3 mx-auto w-12 border-t border-gold/40"></div>
      </div>

      <div class="max-w-5xl mx-auto">
        <div class="grid gap-8 md:gap-10 lg:gap-12 md:grid-cols-5 items-center">
          <!-- Image -->
          <div class="md:col-span-2 md:order-last overflow-hidden shadow-lg">
            <Image
              src={wineryDogs}
              alt="Flora and Dellingr, our certified winery dogs"
              class="w-full h-auto object-cover"
              widths={[400, 600]}
              sizes="(max-width: 768px) 100vw, 400px"
              quality={85}
            />
          </div>

          <!-- Bio -->
          <div class="md:col-span-3">
            <p class="text-sm font-medium text-gold uppercase tracking-wide mb-2">
              Certified Winery Dogs
            </p>
            <h3 class="font-serif text-2xl font-semibold sm:text-3xl mb-4">
              Flora & Dellingr
            </h3>
            <p class="text-muted-foreground">
              Our four-legged team members provide security for our seven-acre property near the Vermillion River. More importantly, they serve as friendly greeters to customers—always ready with a wagging tail and warm welcome for visitors to the vineyard.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Call to Action -->
  <section class="py-24 lg:py-32">
    <div class="container mx-auto px-4 lg:px-8 text-center">
      <h2 class="font-serif text-3xl font-semibold tracking-tight sm:text-4xl mb-4">
        Come Meet Our Team
      </h2>
      <p class="text-muted-foreground max-w-2xl mx-auto mb-8">
        Visit our tasting room in Vermillion, South Dakota. Our friendly staff is ready to share our story and help you discover your new favorite wine or spirit.
      </p>
      <Button href="/tasting-room/" variant="gold" size="lg">
        Plan Your Visit
      </Button>
    </div>
  </section>
</BaseLayout>
